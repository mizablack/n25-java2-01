package br.com.senaisp.bauru.secao04.aula08;

import javax.swing.JOptionPane;

public class NameMaker {

	public static void main(String[] args) {
    // solicitar o nome nome do meio e sobrenome
		//Mostrar o nome completo ao termino
		
		//solicitando a entrada de dados via janela do swing
				String nome = JOptionPane.showInputDialog("Digite sua nome:");
				//Mostrando uma mensagem via janela swing
				JOptionPane.showMessageDialog(null, "Ola," + nome + ", tudo bem?");
		        //solicitando a idade da pessoa
				int idade = Integer.parseInt(JOptionPane.showInputDialog("Digite sua Idade:"));
				JOptionPane.showMessageDialog(null, "Sua idade no ano que vem ser√° " + (idade + 1));
				
		
		
		
	}

}
